{
  "suggest.minTriggerInputLength": 1,
  "diagnostic.enable": true,
  "diagnostic.displayByAle": true,
  "coc.preferences.previewAutoClose": false,
  "languageserver": {
    "golang": {
      "command": "gopls",
      "filetypes": ["go"]
    },
    "javascript": {
      "command": "typescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["javascript", "typescript"]
    },
    "python": {
      "command": "pyls",
      "filetypes": ["python"]
    }
  }
}
